{% from "govuk-frontend/govuk/components/inset-text/macro.njk" import govukInsetText %}

{% extends "layouts/layout.njk" %} 

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <h1 id="expired-header" class="govuk-heading-xl">Sorry, we cannot update your availability</h1>
    
    {{ govukInsetText({
      text: "The link you used has expired."
    }) }}

    <p class="govuk-body">
      We have sent you an email so you can update your availability between 
      <span class="govuk-!-font-weight-bold">
        <span id="start-date">{{ atf.availability.startDate | formatDate }}</span>
         and 
        <span id="end-date">{{ atf.availability.endDate | formatDate }}</span>.
      </span>
    </p>
    
    <p class="govuk-body">
      If you have not received an email or you cannot find the email, you can
      <a id="retry-link" class="govuk-link" href="/reissue-token?token={{ token }}&retry=true">ask us to resend the email</a>.
    </p>

  {% include "includes/feedback.njk" %}
  </div>
</div>
{% endblock %}
